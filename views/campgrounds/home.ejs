<% layout('layouts/boilerplate') %>

<div class="home-container position-relative">
    <!-- Hero section with background image -->
    <div class="hero-section px-4 py-5 text-center text-white position-relative" style="background-image: url('https://www.mountainphotography.com/images/xl/20140226-Bridge-of-Heaven-Night.jpg'); background-size: cover; background-position: center;">
      <div class="overlay position-absolute top-0 start-0 w-100 h-100  opacity-40"></div>
      <div class="container py-5 position-relative">
        <h1 class="display-3 fw-bold mb-3">Welcome to Himalayan Camps</h1>
        <p class="lead mb-4">Discover and share the best camping spots in the Himalayas</p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
          <a href="/campground" class="btn btn-primary btn-lg px-4 gap-3">View Campgrounds</a>
          <a href="/campground/new" class="btn btn-outline-light btn-lg px-4">Add New Campground</a>
        </div>
      </div>
    </div>
  
  <!-- Features section -->
  <div class="container px-4 py-5">
    <h2 class="text-center mb-5">Why Himalayan Camps?</h2>
    <div class="row g-4 py-3 row-cols-1 row-cols-lg-3">
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <div class="text-center mb-3">
              <i class="bi bi-map fs-1 text-primary"></i>
            </div>
            <h3 class="card-title text-center">Discover Places</h3>
            <p class="card-text">Explore unique camping destinations shared by our community of outdoor enthusiasts.</p>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <div class="text-center mb-3">
              <i class="bi bi-star fs-1 text-primary"></i>
            </div>
            <h3 class="card-title text-center">Read Reviews</h3>
            <p class="card-text">Find the perfect spot with honest reviews and ratings from fellow campers.</p>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <div class="text-center mb-3">
              <i class="bi bi-share fs-1 text-primary"></i>
            </div>
            <h3 class="card-title text-center">Share Experiences</h3>
            <p class="card-text">Add your own discoveries and help others find amazing camping locations.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- CTA section -->
  <div class="bg-light p-5 text-center">
    <div class="container py-3">
      <h2 class="mb-4">Ready to start your adventure?</h2>
      <a href="/register" class="btn btn-success btn-lg px-4 me-md-2">Sign Up Today</a>
    </div>
  </div>
</div>


