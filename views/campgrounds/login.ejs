<%   layout('layouts/boilerplate')  %>
<div class="container-fluid d-flex justify-content-center">
<h1>Login</h1>
</div>
<div class="container-fluid d-flex justify-content-center min-vh-100">
<form action="/login" method="POST" class="needs-validation col-md-4" novalidate>
    <div class="mb-3">

        <label class="form-label" for="name">Username</label>
        <input class="form-control" type="text" id="name" name="username" required>

    </div>
    <div class="mb-3">

        <label class="form-label" for="password">Password</label>
        <input class="form-control" type="password" id="password" name="password" required>
        
    </div>
    <button class="btn btn-success">Login</button>




</form>
</div>