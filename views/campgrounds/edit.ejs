<%  layout('layouts/boilerplate')  %>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
<form action="/campground/<%= campground._id    %>?_method=PUT"  method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="mb-3">

    <label class="form-label" for="name">TITLE</label>
    <input class="form-control" type="text" id="name" name="campground[title]"b value="<%=campground.title %>">
    </div>

    <div class="mb-3">

        <label class="form-label" for="location">LOCATION</label>
        <input class="form-control" type="text" id="location" name="campground[location]" value="<%=campground.location     %>">

    </div>
    <div class="mb-3">

        <label class="form-label" for="image">Add Images</label>
        <input type="file" name="image" id="image" multiple>

    </div> 
    <div class="mb-3">

        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" id="description" name="campground[description]" placeholder="<%= campground.description   %>"></textarea>

    </div>
    <div class="mb-3">

        <label class="form-label" for="price">Price</label>
        <input class="form-control" type="text" placeholder="0.0" id="price" name="campground[price]" value="<%= campground.price     %>">

    </div>
    <div class="mb-3">

    <button class="btn btn-success">  Edit Campground  </button>
    </div>
  </form>
  <a href="/campground/<%=   campground._id     %>">BACK TO CAMPGROUND</a>
</div>
</div>















    